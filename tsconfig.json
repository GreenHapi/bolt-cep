{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "es5"],
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "src/jsx"]
}
